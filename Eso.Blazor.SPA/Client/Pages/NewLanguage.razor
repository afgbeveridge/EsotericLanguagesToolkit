@page "/new-language"

@using Eso.Blazor.SPA.Client.Models;
@inject AppState State

<Tabs SelectedTab="edit">
        <Items>
                <Tab Name="edit">Mappings</Tab>
                <Tab Name="documentation">Documentation</Tab>
        </Items>
        <Content>
                <TabPanel Name="edit">
                        <LanguageEditor Mode="new" OnUserAction="@(async () => { await Task.Yield(); await LanguageSaved(); })"></LanguageEditor>
                </TabPanel>
                <TabPanel Name="documentation">
                        <LanguageDocumentation Language="_" @ref="Doc"></LanguageDocumentation>
                </TabPanel>
        </Content>
</Tabs>

@code {

        private LanguageDocumentation Doc { get; set; }

        private async Task LanguageSaved() {
                await Doc.UpdateAsync();
        }

}
